# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_app_client_id
GITHUB_CLIENT_SECRET=your_github_app_secret

# Database Configuration
DATABASE_URL=postgresql://tamagitto:password@localhost:5432/tamagitto_dev
TEST_DATABASE_URL=postgresql://tamagitto:password@localhost:5432/tamagitto_test
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Keys
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# API Configuration
API_BASE_URL=http://localhost:8000
CORS_ORIGINS=["http://localhost:3000","chrome-extension://your-extension-id"]

# Infrastructure
DOMAIN=localhost
ENVIRONMENT=development

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# External Services
WEBHOOK_SECRET=your-github-webhook-secret

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Cache Settings
CACHE_TTL_SECONDS=300
IMAGE_CACHE_TTL_DAYS=30

# Health Check Settings
HEALTH_CHECK_INTERVAL_MINUTES=5
ENTITY_DECAY_GRACE_PERIOD_DAYS=3

# Development Settings (remove in production)
DATABASE_ECHO=false
RELOAD_ON_CHANGE=true