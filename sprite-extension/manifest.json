{
  "manifest_version": 3,
  "name": "Code Companion Sprite",
  "version": "1.0",
  "description": "Motivational coding companion",
  "permissions": [
    "activeTab",
    "storage",
    "tts"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
